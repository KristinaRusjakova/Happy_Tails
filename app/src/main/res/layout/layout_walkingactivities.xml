<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/custon_edittext"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Date -->

    <TextView
        android:id="@+id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Date:"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutWalkingActivityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_alignTop="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Dog -->

    <TextView
        android:id="@+id/LayoutWalkingActivityDogStandard"
        android:layout_width="90dp"
        android:layout_marginStart="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/LayoutWalkingActivityDog"
        android:text="Dog:"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LayoutWalkingActivityDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_below="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:text="Dog"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Time -->
    <TextView
        android:id="@+id/LayoutWalkingActivityTotalWalkingTimeStandard"
        android:layout_width="90dp"
        android:layout_marginStart="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutWalkingActivityDogStandard"
        android:text="Minutes:"
        android:textStyle="bold"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutWalkingActivitiesTotalWalkingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_below="@id/LayoutWalkingActivityDogStandard"
        android:text="Minutes"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Distance -->
    <TextView
        android:id="@+id/LayoutWalkingActivitiesTotalDistanceStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutWalkingActivityTotalWalkingTimeStandard"
        android:text="Meters:"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/LayoutWalkingActivitiesTotalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_below="@id/LayoutWalkingActivityTotalWalkingTimeStandard"
        android:text="Meters"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Description -->
    <TextView
        android:id="@+id/LayoutWalkingActivitiesWalkingDescriptionStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutWalkingActivitiesTotalDistanceStandard"
        android:text="Description:"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutWalkingActivitiesWalkingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LayoutWalkingActivitiesWalkingDateStandard"
        android:layout_below="@id/LayoutWalkingActivitiesTotalDistanceStandard"
        android:text="Description"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

