<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custon_edittext">

    <TextView
        android:id="@+id/LayoutFriendsDogNameStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/LayoutFriendsDogName"
        android:layout_marginStart="14dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text="Dog Name:"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutFriendsDogName"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="34dp"
        android:text="Dog Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutFriendsCityStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LayoutFriendsDogNameStandard"
        android:layout_below="@+id/LayoutFriendsDogName"
        android:text="City:"
        android:textStyle="bold"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutFriendsDogCity"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LayoutFriendsDogName"
        android:layout_below="@+id/LayoutFriendsDogName"
        android:text="City"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutFriendsDogBreedStandard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutFriendsDogCity"
        android:layout_marginEnd="-103dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/LayoutFriendsDogName"
        android:text="Dog Breed:"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorFontMain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LayoutFriendsDogBreed"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LayoutFriendsDogName"
        android:layout_below="@+id/LayoutFriendsDogCity"
        android:text="Breed"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>
